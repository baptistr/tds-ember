<select size="10" ...attributes multiple="multiple" {{on "change" this.change}}>
  {{#each @elements as |elm|}}//boucle foreach permettant d'afficher tous les éléments
    <option value={{elm.id}} selected={{array-contains @selected elm this.id}}>{{elm.title}}</option> //valeur = à l'id de l'élement // selected = utilisation helper //on affiche le titre de l'element
  {{/each}}
</select>
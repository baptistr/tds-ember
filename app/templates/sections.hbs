{{page-title "Sections"}}
<h1>Store</h1>
<button {{action "board"}}>Retour au table de bord</button>
<fieldset>
    <legend>Gestion des sections</legend>
    <div class="ui container">
      <button {{action "addSection"}} class="ui black button">Nouvelle section ...</button>
      <button {{action "addProduct"}} class="ui black button">Nouveau produit ...</button>
      {{outlet "addProduct/SectionOutlet"}}
      <label for="filterSections">Sections (nb sections)</label>
      <Input
              @id="filterSections"
              @type="text"
              @value="Filtrer la section">
      </Input>

      <div class="ui table">
        <div class="ui relaxed divided list">
        {{#each @model.sections as |sections|}}
          <div class="item">
            <div class="content">
              <div class="header"> <strong>{{sections.name}}</strong></div>
              {{sections.description}}
            </div>
            <LinkTo @route="sections.edit" @model={{sections.id}} class="ui tiny orange button"><i class="edit icon"></i></LinkTo>
            <LinkTo @route="sections.delete" @model={{sections.id}} class="ui tiny inverted red button"><i class="trash icon"></i></LinkTo>
            {{outlet sections.id}}
          </div>
        {{/each}}
        </div>
      </div>
    </div>
</fieldset>
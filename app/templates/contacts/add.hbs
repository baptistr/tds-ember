{{page-title "Add"}}
<div class="row">
  <div class="col">
    <Input @value={{@model.nom}} placeholder="Entrez votre nom" class="form-control"/>
  </div>
  <div class="col">
    <Input @value={{@model.prenom}} placeholder="Entrez votre prenom" class="form-control"/>
  </div>
  <div class="col">
    <Input @value={{@model.email}} placeholder="Entrez votre mail" type="email" class="form-control"/>
  </div>
  <div class="col">
    <button {{action "save" @model}} class="btn btn-priamry">Enregistrer</button>
    <LinkTo @route="contacts" class="btn btn-secondary">Annuler</LinkTo>
  </div>
</div>
{{outlet}}